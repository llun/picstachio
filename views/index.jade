extends layout

block content
  .container
    h3 Current Campaigns
    table.table.tabled-bordered
      thread
        tr
          th Sample Images
          th Campaign description
          th Entries
          th Ending
          th Budget
          th Client
          th
      tbody.row
        - each campaign in campaigns
          tr
            td
              if campaign.images[0]
                img(src=campaign.images[0])
            td
              = campaign.name
              br
              small
                = campaign.description
            td
              if campaign.bid
                = campaign.bid
              else
              |  0
            td
              = campaign.endDate
            td
              if campaign.budget
                = campaign.budget
              else
                | N/A
              
            td
              = campaign.owner.username
            td
              a.btn.btn-block.btn-success(href='/bid') Bid

