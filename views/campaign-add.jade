extends layout

block content
  .container
    .row
      .span8.offset2
        h2 create a campaign
          form.form-horizontal(action='/campaign/add',method='post')
            .control-group
              label.control-label(for='campaignName') Campaign Name
              .controls
                input(type='text',name='campaignname', id='campaignname')

            label Description
            textarea(type='text',name='description',placeholder='Description', size='100')
            label Sample Photos
            input(type='file',name='files[]',placeholder='File')
            label End Date
            input(type='text',name='end_date',placeholder='End Date')
            p
            button.btn.btn-primary(type='submit', name='create_campaign') Create a campaign
