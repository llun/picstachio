extends layout

block content
  .container
    .span12
      form(action='/users/login',method='post').form-horizontal
        legend
          h3 Login
        if flash.error && flash.error.length > 0
          .alert.alert-error
            = flash.error[0]
        .control-group
          label.control-label(for='username',style='font-size: 18px;') Username
          .controls
            input.span4(type='text',name='username',id='username')
        .control-group
          label.control-label(for='password',style='font-size: 18px;') Password
          .controls
            input.span4(type='password',name='password',id='password')
        .control-group
          .controls
            button.btn.span4.btn-success(type='submit',style='margin-left: 0;') Login
